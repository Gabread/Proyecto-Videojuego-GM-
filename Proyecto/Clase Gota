package puppy.code;

import com.badlogic.gdx.math.Rectangle;
import com.badlogic.gdx.graphics.Texture;

public abstract class Gota {
    protected Rectangle bounds;
    protected float velocidadY;
    protected Texture texture;
    private boolean activo = true;

    public Gota(Texture texture, float x, float y, float velocidadY) {
        this.texture = texture;
        this.bounds = new Rectangle(x, y, 64, 64);
        this.velocidadY = velocidadY;
    }

    /** Actualiza la posici√≥n de la gota */
    public void update(float dt) {
        bounds.y -= velocidadY * dt;
        if (bounds.y + bounds.height < 0) activo = false;
    }

    public Rectangle getBounds() {
        return bounds;
    }

    public boolean isActivo() {
        return activo;
    }

    protected void setActivo(boolean a) {
        activo = a;
    }

    public Texture getTexture() {
        return texture;
    }
    public abstract void onCollide(Tarro tarro);
}
