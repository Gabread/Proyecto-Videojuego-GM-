package puppy.code;

import com.badlogic.gdx.graphics.Texture;

public class GotaBuena extends Gota {
    private int valor;

    public GotaBuena(Texture texture, float x, float y, float velocidadY) {
        super(texture, x, y, velocidadY);
        this.valor = 10;
    }
    
    public int getValor() {
        return valor;
    }
    
    public void setValor(int valor) {
        this.valor = valor;
    }
    
    @Override
    public void onCollide(Tarro tarro) {
        if (!isActivo()) {
            return;
        }
        tarro.sumarPuntos(valor);
        setActivo(false);
    }
}
