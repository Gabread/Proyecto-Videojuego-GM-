//Clase Tarro
package puppy.code;

import com.badlogic.gdx.Gdx;
import com.badlogic.gdx.Input;
import com.badlogic.gdx.audio.Sound;
import com.badlogic.gdx.graphics.Texture;
import com.badlogic.gdx.graphics.g2d.SpriteBatch;
import com.badlogic.gdx.math.MathUtils;
import com.badlogic.gdx.math.Rectangle;

public class Tarro {
    private Rectangle bucket;
    private Texture bucketImage;
    private Sound sonidoHerido;
    private int vidas;
    private int puntos;
    private int velocidadX;
    private boolean herido;
    private int tiempoHeridoMax;
    private int tiempoHerido;
    private GestorEfectos gestorEfectos;
    
    public Tarro(Texture tex, Sound ss) {
        this.bucketImage = tex;
        this.sonidoHerido = ss;
        this.vidas = 3;
        this.puntos = 0;
        this.velocidadX = 400;
        this.herido = false;
        this.tiempoHeridoMax = 50;
        this.tiempoHerido = 0;
        this.gestorEfectos = new GestorEfectos();
    }
    
    // getters
    public int getVidas() {
        return vidas;
    }
    
    public int getPuntos() {
        return puntos;
    }
    
    public Rectangle getArea() {
        return bucket;
    }
    
    public boolean estaHerido() {
        return herido;
    }
    
    public GestorEfectos getGestorEfectos() {
        return gestorEfectos;
    }
    
    public int getVelocidadX() {
        return velocidadX;
    }
    
    // setters
    public void setVidas(int vidas) {
        this.vidas = vidas;
    }
    
    public void setVelocidadX(int velocidadX) {
        this.velocidadX = velocidadX;
    }
    
    // metodos de negocio
    public void sumarPuntos(int pp) {
        if (pp > 0) {
            this.puntos += pp;
        }
    }
    
    public void crear() {
        bucket = new Rectangle();
        bucket.x = 800 / 2 - 64 / 2;
        bucket.y = 20;
        bucket.width = 64;
        bucket.height = 64;
    }
    
    public void dañar() {
        // verificar si tiene escudo activo
        if (gestorEfectos.tieneEfectoActivo("Escudo protector")) {
            System.out.println("¡El escudo te protegió!");
            return;
        }
        
        vidas--;
        herido = true;
        tiempoHerido = tiempoHeridoMax;
        sonidoHerido.play();
    }
    
    public void dibujar(SpriteBatch batch) {
        if (!herido) {
            batch.draw(bucketImage, bucket.x, bucket.y);
        } else {
            batch.draw(bucketImage, bucket.x, bucket.y + MathUtils.random(-5, 5));
            tiempoHerido--;
            if (tiempoHerido <= 0) {
                herido = false;
            }
        }
    }
    
    public void actualizarMovimiento() {
        // actualizar efectos
        gestorEfectos.actualizarTodos(Gdx.graphics.getDeltaTime());
        
        // movimiento desde teclado
        if (Gdx.input.isKeyPressed(Input.Keys.LEFT)) {
            bucket.x -= velocidadX * Gdx.graphics.getDeltaTime();
        }
        if (Gdx.input.isKeyPressed(Input.Keys.RIGHT)) {
            bucket.x += velocidadX * Gdx.graphics.getDeltaTime();
        }
        
        // que no se salga de los bordes
        if (bucket.x < 0) bucket.x = 0;
        if (bucket.x > 800 - 64) bucket.x = 800 - 64;
    }
    
    public void destruir() {
        bucketImage.dispose();
        gestorEfectos.limpiarEfectos();
    }
}
